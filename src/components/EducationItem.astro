---
const { institution, area, startDate, endDate, highlights, imageUrl } = Astro.props;
---


<li class="mb-10 ms-4">
  <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"></div>
  
  <time class="mb-1 mt-10 text-sm font-normal leading-none dark:text-gray-500">
    {startDate} - {endDate}
  </time>
  
  <h3 class="text-indigo-400 font-bold text-xl mb-2 mt-6">
    {area}
  </h3>
  
  <p class="font-semibold mb-4">
    {institution}
  </p>

  {highlights.map(highlight => <p class="mb-2">{highlight}</p>)}

  {
    imageUrl && (
      <div>
        <img
          class="w-64 aspect-video rounded-xl mt-10"
          src={imageUrl}
          alt={`Imagen descriptiva del proyecto ${institution}`}
        />
      </div>
    )
  }

</li>