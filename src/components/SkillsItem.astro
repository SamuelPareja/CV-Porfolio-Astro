---
import type { Skills } from "src/interfaces/skills.interface";

const { basics, advanced }: Skills = Astro.props as Skills;
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
  <!-- Columna Básico               class="text-indigo-400 font-bold text-xl mb-2 mt-6"-->
  <div>
    <h2 class="text-2xl font-bold text-indigo-400 mb-4 text-center">Básico</h2>
    <div
      class="grid grid-cols-2 sm:grid-cols-3 gap-2 lg:gap-4 justify-center"
    >
      {
        basics?.map(tag => (
          <div
            class="bg-[#282828] rounded p-4 flex flex-col gap-2 items-center"
            title={tag.label}
          >
            <img class="h-16" src={tag.iconUrl} alt={tag.label} />
            <span class="text-center">{tag.label}</span>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Columna Avanzado -->
  <div>
    <h2 class="text-2xl font-bold text-indigo-400 mb-4 text-center">Avanzado</h2>
    <div
      class="grid grid-cols-2 sm:grid-cols-3 gap-2 lg:gap-4 justify-center"
    >
      {
        advanced?.map(tag => (
          <div
            class="bg-[#282828] rounded p-4 flex flex-col gap-2 items-center"
            title={tag.label}
          >
            <img class="h-16" src={tag.iconUrl} alt={tag.label} />
            <span class="text-center">{tag.label}</span>
          </div>
        ))
      }
    </div>
  </div>
</div>
